{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["dist/**/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useOptionalChain": {
          "level": "warn",
          "fix": "safe"
        },
        "noForEach": {
          "level": "off"
        }
      },
      "style": {
        "noUselessElse": {
          "level": "off",
          "fix": "none"
        },
        "useSelfClosingElements": {
          "level": "warn",
          "fix": "safe"
        },
        "useTemplate": {
          "level": "info",
          "fix": "none"
        },
        "useSingleVarDeclarator": {
          "level": "info",
          "fix": "none"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
